html,
button,
input,
select,
textarea {
  font-family: MyriadPro-Regular, Helvetica, Arial, sans-serif;
}

body {
  background-color: rgb(22, 22, 22);
  color: #141412;
  line-height: 1.5;
  margin: 0;
  -webkit-font-smoothing: antialiased;
}

a {
  color: white;
  text-decoration: underline;
}
/*
a:active,
a:hover {
  color: white;
  outline: 0;
}
*/
h1,
h2,
h3,
h4,
h5,
h6 {
  clear: both;
  font-family: OriyaMN, Helvetica, Arial, sans-serif;
  font-weight: normal;
  line-height: 1.3;
  margin: 0;
}

h1 {
  font-size: 48px;
  padding: 33px 0;
}

h2 {
  font-size: 30px;
  padding: 25px 0;
  letter-spacing: 0.05em;
}

h3 {
  font-size: 22px;
  padding: 22px 0;
  letter-spacing: 0.1em;
}

h4 {
  font-size: 20px;
  padding: 25px 0;
}

h5 {
  font-size: 18px;
  padding: 30px 0;
}

h6 {
  font-size: 16px;
  padding: 36px 0;
}

@font-face {
  font-family: MyriadPro-Regular;
  src: url(../fonts/MyriadPro-Regular.otf);
}

@font-face {
  font-family: OriyaMN;
  src: url(../fonts/OriyaMN.ttf);
}

.site {
  margin: 0 auto;
  width: 100%;
}

.site-main {
  position: relative;
}



.home-background {
  background-color: rgb(22, 22, 22); /* TF Teal (206, 220, 216) */
}

.home-text {
  color: #ffffff;
  text-align: center;
  font-weight: 100;
  max-width: 1000px;
  margin-left: auto;
  margin-right: auto;
}

.home-title {
  text-align: center;
  padding-top: 10px;
}

.home-title-img {
  position: absolute;
  top: 60px;
  max-width: 80%;
  z-index: 2;
}

.home-title-splash {
  max-width: 80%;
}

.home-platform-icons {
  width: 80%;
  margin-left: auto;
  margin-right: auto;
  margin-bottom: 60px;
  text-align: center;
}

.home-platform-icons > img {
  width: 100%;
  max-width: 640px;
}

.primary-video {
  width: 100%;
  text-align: center;
  overflow: hidden;
}

.steam-widget {
  width: 100%;
  text-align: center;
  margin-bottom: 40px;
  margin-top: 60px;
  overflow: hidden;
}

.humble-widget {
  width: 100%;
  text-align: center;
  margin-bottom: 20px;
  overflow: hidden;
}

@media (max-width: 580px) {
  .steam-widget {
    margin-top: 0;
    margin-bottom: 0;
  }

  #steamWidget {
    -webkit-transform-origin: left;
    transform-origin: left;
    -webkit-transform: scale(0.5);
    transform: scale(0.5);
  }

  .humble-widget {
    margin-top: -100px;
    margin-bottom: -60px;
  }

  #humbleWidget {
    -webkit-transform-origin: left;
    transform-origin: left;
    -webkit-transform: scale(0.5);
    transform: scale(0.5);
  }
}

.download-buttons-home {
  margin-left: auto;
  margin-right: auto;
  margin-top: 30px;
  margin-bottom: 20px;
  text-align: center;
  width: 100%;
  display: inline-block;
}

.download-button {
  margin-right: 30px;
  margin-left: 30px;
  vertical-align: middle;
}

.button-steam {
  display: inline-block;
  width: 320px;
  height: 181px;
  text-decoration: none;
  background: url(../images/home/SteamButton.png);
}

.button-app-store {
  background: url(../images/home/AppStoreButton.png);
}

.button-play-store {
  background: url(../images/home/PlayStoreButton.png);
}

a.button-rollover {
  display: inline-block;
  width: 255px;
  height: 100px;
  text-decoration: none;
}

a.button-rollover:hover {
  background-position: -255px 0;
}

a.button-steam-rollover {
  display: inline-block;
  width: 163px;
  height: 110px;
  text-decoration: none;
}

a.button-steam-rollover:hover {
  background-position: -163px 0;
}

.header-accent {
  vertical-align: middle;
  padding-bottom: 6px;
}

@media (max-width: 400px) {
  .header-accent {
    display: none;
  }
}

@media (max-width: 650px) {
  .h3-4S-hotfix {
    font-size: 20px;
  }
}

.about-game {
  margin-left: 15%;
  margin-right: 15%;
  padding-bottom: 40px;
  text-align: left;
}

.about-game-features {
  width: 70%;
  margin-left: 15%;
}

.home-cptscreenshots {
  width: 80%;
  margin-left: auto;
  margin-right: auto;
  margin-top: 20px;
  margin-bottom: 20px;
  text-align: center;
}

.home-cptscreenshots > img {
  width: 100%;
  max-width: 1200px;
}

.screenshots {
  margin-top: 0;
}

.screenshot-container {
  margin-top: -50px;
}

.screenshot {
  width: 60%;
  display: inline-block;
}

.screenshot > img {
  width: 100%;
}

.screenshot-right {
  text-align: right;
}

.screenshot-caption {
  width: 40%;
  padding-left: 10px;
  padding-right: 10px;
  box-sizing: border-box;
  display: inline-block;
  vertical-align: middle;
}

.press-kit {
  padding-top: 40px;
  padding-bottom: 100px;
}

.press-kit-text {
  margin-left: 15%;
  margin-right: 15%;
}



.game-background {
  width: 100%;
  margin: 0;
  padding: 0;
  background-size: cover;
  background-repeat: no-repeat;
  background-position: 50% 50%;
}

.game-background-cpt {
  background-image: url(../images/games/backgroundCPT.png);
}

.game-background-up {
  background-image: url(../images/games/backgroundUp.png);
}

.game-background-don {
  background-image: url(../images/games/backgroundDon.png);
}

.game-background-sat {
  background-image: url(../images/games/backgroundSat.png);
}

.game-info-left {
  display: inline-block;
  vertical-align: top;
  width: 50%;
  text-align: center;
}

.game-info-right {
  display: inline-block;
  vertical-align: bottom;
  width: 50%;
  text-align: center;
}

.game-info-right img {
  vertical-align: bottom;
}

@media (max-width: 840px) {
  .game-info-left {
    width: 100%;
  }

  .game-info-right {
    width: 100%;
  }
}

.black-bar {
  background-color: rgb(22, 22, 22);
  height: 40px;
  width: 100%;
}

.game-text {
  text-align: left;
  display: inline-block;
  margin-left: auto;
  margin-right: auto;
  width: 80%;
  line-height: 140%;
  letter-spacing: 0.5px;
  margin-top: 30px;
}

.game-text-cpt {
  color: white;
}

.game-text-don {
  color: #6d0f0f;
}

.game-text-up {
  color: white;
}

.game-text-sat {
  color: #21201d;
}

.game-logo {
  text-align: center;
  margin-top: 60px;
  width: 100%;
}

.game-logo > img {
  width: 80%;
  max-width: 300px;
}

.game-logo-cpt > img {
  width: 70%;
  max-width: 500px;
}

.game-logo-up > img {
  width: 80%;
  max-width: 200px;
}

.game-logo-sat > img {
  width: 80%;
  max-width: 400px;
}

.download-buttons-games {
  margin-left: auto;
  margin-right: auto;
  text-align: center;
  margin-top: 5px;
  margin-bottom: 30px;
  width: 100%;
  display: inline-block;
}

.download-button-game {

}

.download-buttons-placeholder {
  padding-bottom: 30px;
}

.download-buttons-placeholder > img {
  width: 80%;
  max-width: 500px;
}

.games-device-pic-landscape {
  width: 80%;
}

.games-device-pic-portrait {
  width: 45%;
}



.about-background {
  background-color: rgb(22, 22, 22);
}

.about-header {
  width: 100%;
  text-align: center;
  color: white;
}

.about-title {
  padding-top: 70px;
}

.about-pics {
  width: 100%;
  padding-top: 120px;
  text-align: center;
}

.about-box {
  width: 300px;
  display: inline-block;
}

.about-pic {
  margin-right: 15px;
  margin-left: 15px;
}

.about-name {
  margin-top: 20px;
  width: 100%;
  font-family: OriyaMN, Helvetica, Arial, sans-serif;
  font-size: 18px;
  color: #ffffff;
  letter-spacing: 0.1em;
}

.about-text {
  width: 80%;
  margin-left: auto;
  margin-right: auto;
  color: white;
  padding-top: 15px;
}

.about-buffer {
  width: 100%;
  height: 60px;
}

.about-buffer-bottom {
  width: 100%;
  height: 120px;
}



/* Does the same thing as <meta name="viewport" content="width=device-width">,
 * but in the future W3C standard way. -ms- prefix is required for IE10+ to
 * render responsive styling in Windows 8 "snapped" views; IE10+ does not honor
 * the meta tag. See https://core.trac.wordpress.org/ticket/25888.
 */
@-ms-viewport {
  width: device-width;
}
@viewport {
  width: device-width;
}
